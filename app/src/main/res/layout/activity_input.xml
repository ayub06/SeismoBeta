<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pkm.proyek.seismoalpha.InputActivity"
    android:orientation="vertical">
   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/icon_data_korban"
            android:layout_margin="4dp"
            android:src="@drawable/victims"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Korban"
            android:textStyle="bold"
            android:id="@+id/title_data_korban"
            android:layout_toRightOf="@id/icon_data_korban"
            android:textSize="18sp"
            android:layout_marginTop="8dp" />
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_data_korban"
            android:layout_toRightOf="@id/icon_data_korban"
            android:columnCount="2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginRight="4dp"
                android:text="Korban jiwa:"/>
            <EditText
                android:layout_width="64dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:hint="0"
                android:inputType="numberSigned|numberDecimal"
                android:singleLine="true"
                android:id="@+id/input_korban_jiwa"
                android:layout_gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Luka berat:"/>
            <EditText
                android:layout_width="64dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:hint="0"
                android:inputType="numberSigned|numberDecimal"
                android:singleLine="true"
                android:id="@+id/input_luka_berat"
                android:layout_gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Luka ringan:"/>
            <EditText
                android:layout_width="64dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:hint="0"
                android:inputType="numberSigned|numberDecimal"
                android:singleLine="true"
                android:id="@+id/input_luka_ringan"
                android:layout_gravity="right"/>
        </GridLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">
        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/icon_data_kerusakan"
            android:layout_margin="4dp"
            android:src="@drawable/building"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Kerusakan"
            android:textStyle="bold"
            android:id="@+id/title_data_kerusakan"
            android:layout_toRightOf="@id/icon_data_kerusakan"
            android:textSize="18sp"
            android:layout_marginTop="8dp" />
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_below="@+id/title_data_kerusakan"
            android:layout_toRightOf="@id/icon_data_kerusakan">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginRight="4dp"
                android:text="Rusak berat:"/>
            <EditText
                android:layout_width="64dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:hint="0"
                android:inputType="numberSigned|numberDecimal"
                android:singleLine="true"
                android:id="@+id/input_rusak_berat"
                android:layout_gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Rusak ringan:"/>
            <EditText
                android:layout_width="64dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:hint="0"
                android:singleLine="true"
                android:inputType="numberSigned|numberDecimal"
                android:id="@+id/input_rusak_ringan"
                android:layout_gravity="right"/>
        </GridLayout>
    </RelativeLayout>
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/loading"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/fab"
            android:layout_centerHorizontal="true"/>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_done_white_36dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</LinearLayout>
